
<% if @wiki.user == current_user %>
  <%= form_tag wiki_collaborators_path(@wiki), method: :post do %>
    <%= text_field_tag :email %>
    <%= hidden_field_tag :wiki_id, @wiki.id %>
    <%= submit_tag "Add Collaborator" %>
  <% end %>
<% end %>

</br>


<div class="row">
  <h4>Wiki Collaborators</h4>
  <% @wiki.collaborators.each do |collaborator| %>
    <p>
      <%= collaborator.user.email %>
      <!-- delete collaborator option only available to creator -->
      <% if @wiki.user == current_user %>
        <%= link_to "", wiki_collaborator_path(@wiki, collaborator), method: :delete, class: 'glyphicon glyphicon-ok' %>
      <% end %>
    </p>
  <% end %>
</div>